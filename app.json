{
  "expo": {
    "name": "Qibla App",
    "description": "A simple qibla app built with expo & react-native.",
    "slug": "compass",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "bundleIdentifier": "ma.qibla.app"
    },
    "android": {
      "package": "ma.qibla.app"
    }
  }
}
